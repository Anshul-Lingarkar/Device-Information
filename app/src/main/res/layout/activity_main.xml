<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/device_information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_title"
        android:layout_marginTop="@dimen/title_padding"
        android:layout_marginLeft="@dimen/title_padding_left"
        android:textColor="@color/black"
        android:textSize="@dimen/main_screen_title_size"
        android:textStyle="bold"/>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_margin"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_view_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_view_background"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <TextView
                    android:id="@+id/ip_address_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ip_address_card_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/card_view_title" />

                <TextView
                    android:id="@+id/ip_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/ipaddress_text_color"
                    android:textSize="@dimen/card_view_value"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_margin"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_view_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_view_background"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <TextView
                    android:id="@+id/location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/user_location_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/card_view_title" />

                <TextView
                    android:id="@+id/location_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/location_text_color"
                    android:textSize="@dimen/card_view_value"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_view_margin"
            app:cardCornerRadius="@dimen/card_view_corner_radius"
            app:cardElevation="@dimen/card_view_elevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_view_background"
                android:orientation="horizontal"
                android:padding="@dimen/card_view_padding">

                <TextView
                    android:id="@+id/date_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date_time_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/card_view_title" />

                <TextView
                    android:id="@+id/datetime_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/datetime_text_color"
                    android:textSize="@dimen/card_view_value"
                    android:textStyle="bold" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/download_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/download_button_padding"
            android:layout_marginTop="@dimen/download_button_padding"
            android:layout_marginRight="@dimen/download_button_padding"
            android:backgroundTint="@color/button_background"
            android:elevation="@dimen/download_button_elevation"
            android:gravity="center"
            android:padding="@dimen/download_button_text_padding"
            android:text="@string/download_button_text"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
